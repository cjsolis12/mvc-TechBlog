<div class="modal fade" id="commentModal{{postId}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="blog">New Comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="blogContent">
        <form>
          <div class="form-group">
            <label for="content">Leave a comment</label>
            <textarea class="form-control" id="commentText{{postId}}" rows="5"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary commentSubmit" id="commentSubmit{{postId}}"
          data-id="{{postId}}">Post</button>
      </div>
    </div>
  </div>
</div>