<div class="container my-3 py-3 ">
  <div class="row d-flex justify-content-center">
    <div class="col-md-12 col-lg-10 col-xl-8">
      <div class="card" id="blog-card">
        <div class="card-body">
          <div class="d-flex flex-start align-items-center">
            <div>
              <a href="/api/blogs/{{id}}">
                <h3 class="fw-bold text-primary mb-1" id="blog=title">{{title}}</h3>
              </a>
              <p class="text-muted small mb-0">
                {{format_date createdAt}}
              </p>
            </div>
          </div>

          <p class="mt-3 mb-4 pb-2">
            {{content}}
          </p>

          {{!-- Comment Form --}}
          <form action="/api/comments" method="POST">
            <input type="hidden" name="blogPost_id" value="{{id}}">
            <div class="mb-3">
              <label for="commentContent" class="form-label">Leave a comment:</label>
              <textarea class="form-control" name="content" id="commentContent" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

          <hr>

          <div id="comment-section">
            <h5 class="mb-3">Comments:</h5>
            {{#each comments}}
            <div class="card mb-3">
              <div class="card-body">
                <p>{{comment.content}}</p>
                <p class="text-muted small">{{comment.created_at}}</p>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>