<div class="container my-3 py-3 ">
  <div class="row d-flex justify-content-center">
    <div class="col-md-12 col-lg-10 col-xl-8">
      <div class="card" id="blog-card">
        <div class="card-body">
          <div class="d-flex flex-start align-items-center">
            <div>
              <a href="/api/blogs/{{id}}">
                <h3 class="fw-bold text-primary mb-1" id="blog=title">{{title}}</h3>
              </a>
              <p class="text-muted small mb-0">
                {{format_date createdAt}}
              </p>
            </div>
          </div>

          <p class="mt-3 mb-4 pb-2">
            {{content}}
          </p>

          {{!-- Comment Form --}}
          <form action="/dashboard/update/{{id}}" method="POST">
            <input type="hidden" name="blogPost_id" value="{{id}}">
            <div>
              <label for="title">Rename Title</label>
              <input type="text" id="title" name="title" value="{{blogPost.title}}">
            </div>
            <div>
              <label for="content">Content</label>
              <textarea id="content" name="content">{{blogPost.content}}</textarea>
            </div>
            <button id="newComment" type="submit" class="btn btn-primary">Submit</button>
          </form>

          <hr>

          <div id="comment-section">
            <h5 class="mb-3">Comments:</h5>
            {{#each comments}}
            <div class="card mb-3">
              <div class="card-body">
                <p>{{text}}</p>
                <p class="text-muted small">{{createdAt}}</p>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>