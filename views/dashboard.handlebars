<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop4">
      Create a new post
    </button>

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop4" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="blog">New Post</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" id="blogContent">
            <form>
              <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="blogTitle">
              </div>
              <div class="form-group">
                <label for="content">Content</label>
                <textarea class="form-control" id="blogText" rows="10"></textarea>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button id="newPostBtn" type="button" class="btn btn-primary">Post</button>
          </div>
        </div>
      </div>
    </div>

    {{#if blogPosts.length}}
    {{#each blogPosts as |blogPost| }}
    <div class="container my-5 py-5">
      <div class="row d-flex justify-content-center">
        <div class="col-md-12 col-lg-10 col-xl-8">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-start align-items-center">
                <div>
                  <a href="/api/blogs/{{id}}">
                    <h3 class="fw-bold text-primary mb-1">{{title}}</h3>
                  </a>
                  <p class="text-muted small mb-0">
                    {{created_at}}
                  </p>
                </div>
              </div>
              <p class="mt-3 mb-4 pb-2">
                {{content}}
              </p>
              <div class="small d-flex justify-content-start">
                <a href="#!" class="d-flex align-items-center me-3">
                  <i class="far fa-thumbs-up me-2"></i>
                  <p class="mb-0">Like</p>
                </a>
                <a href="#!" class="d-flex align-items-center me-3">
                  <i class="far fa-comment-dots me-2"></i>
                  <p class="mb-0">Comment</p>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
    {{/if}}
  </div>

  <script src="./js/dashboard.js"></script>