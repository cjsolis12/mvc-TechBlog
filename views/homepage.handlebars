{{!-- Hero Section for homepage --}}
<div class="container py-5">
  <div class="row text-center text-white">
    <div class="col-lg-8 mx-auto">
      <h1 class="display-4">CodeFlix</h1>
      <p class="lead mb-5">Post about all things tech.</p>
    </div>
  </div>

  <div class="container">
    <div class="row">
      {{#each blogs}}
      <div class=" my-3 py-3">
        <div class="bg-white rounded shadow-sm py-3 px-3">
          <div class="d-flex p-2 justify-content-between">
            <h4 class="mb-0" data-toggle="collapse" data-target="#blogCollapse{{id}}" aria-expanded="false"
              aria-controls="blogCollapse{{id}}" style="color: #1abc9c;">{{title}}</h4>
            <p class="text-muted small mb-0">{{format_date createdAt}}</p>
          </div>
          <div class="d-flex flex-column p-2">
            <p class="text-muted small mb-0 mr-2">
              By: {{user.username}}
            </p>
            <div>
              <a href="#" >
              <span class="text-muted small mb-0">Leave a comment</span>
              <i class="fa-solid fa-comment ml-2"
                style="color: #1abc9c;"></i>
              </a>
            </div>

          </div>
          <p id="limited-text" class="d-flex p-2 limited-text" style="color: rgb(85, 84, 84);">
            {{content}}
          </p>
          {{!-- Collapsed Comment section for each blog post --}}
          <div id="blogCollapse{{id}}" class="collapse">
              {{#each Comments}}
              <div class="comment">
                <p>{{this.text}}</p>
                <p>By: {{this.user.username}}</p>
                <p>{{ format_date this.createdAt}}</p>
              </div>
              {{/each}}
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>